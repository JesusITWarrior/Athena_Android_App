<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/black_border_gray">
        <ImageView
            android:contentDescription="Icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bluetooth_disabled"
            android:id="@+id/warningIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WARNING"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/warningTitle"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/warningTitle"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Would you like to turn on your Bluetooth?"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_below="@id/warningTitle"
                android:layout_alignTop="@id/warningTitle"
                android:id="@+id/message"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth must be on to proceed."
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:background="@color/red"
                android:text="Cancel"
                android:textColor="@color/white"
                android:id="@+id/cancelButton"/>
            <Button
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:background="@android:color/holo_green_dark"
                android:text="Turn On"
                android:textColor="@color/white"
                android:id="@+id/connectButton"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/black_border_gray">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wifi_icon"
            android:id="@+id/wifiIcon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi Name"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/wifiName"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/wifiName"
            android:paddingTop="15dp"
            android:id="@+id/credentialLayout"
            android:layout_centerHorizontal="true">
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:background="@drawable/black_border"
                android:layout_above="@id/passwordLayout"
                android:hint="Username (if applicable)"
                android:id="@+id/usernameLayout"
                android:layout_below="@id/wifiName">
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:id="@+id/usernameInput"
                    android:textColor="@android:color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250sp"
                android:layout_height="50sp"
                android:background="@drawable/black_border"
                android:hint="Password"
                android:id="@+id/passwordLayout"
                android:layout_centerInParent="true"
                app:passwordToggleEnabled="true">>
                <com.google.android.material.textfield.TextInputEditText
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:id="@+id/passwordInput"
                    android:textColor="@android:color/black"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <Button
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:background="@color/red"
                android:text="Cancel"
                android:textColor="@color/white"
                android:id="@+id/cancelButton"/>
            <Button
                android:layout_width="150sp"
                android:layout_height="50sp"
                android:background="@android:color/holo_green_dark"
                android:text="Connect"
                android:textColor="@color/white"
                android:id="@+id/connectButton"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
